{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Uvicorn (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}/backend/app",
      "console": "integratedTerminal",
      "justMyCode": true,
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend/app"
      }
    },
    {
      "name": "React: Frontend",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/react_app/src",
      "sourceMaps": true,
      "trace": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Both Frontend and Backend",
      "configurations": ["Python: Uvicorn (FastAPI)", "React: Frontend"]
    }
  ]
}
